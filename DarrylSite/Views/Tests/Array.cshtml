@model DarrylSite.Models.ArrayListModel
@using DarrylSite.Models

@{
    ViewBag.Title = "Array";
}

<h2>Array</h2>

<form>

    <h4>@Model.Array.Count()</h4>

    @for (int i = 0; i < @Model.Array.Count(); i++)
    {
        <div class="row">
            <div class="col-sm-2">@Model.Array[i].intCol</div>
            <div class="col-sm-3">@Model.Array[i].stringCol</div>
            <div class="col-sm-2">@Model.Array[i].intCol2</div>
        </div>
    }
    <p></p>
    @foreach (ArrayModel am in Model.Array)
    {
        <div class="row">
            <div class="col-sm-2">@Html.EditorFor(modelItem => am.intCol)</div>
            <div class="col-sm-2">@Html.EditorFor(modelItem => am.stringCol)</div>
            <div class="col-sm-2">@Html.EditorFor(modelItem => am.intCol2)</div>
        </div>    
    }
    <p></p>
    <input type="submit" value="Save" formaction="Array" formmethod="post" class="btn btn-default"/>

</form>