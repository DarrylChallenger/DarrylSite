@model DarrylSite.Models.FormsModel

@{
    ViewBag.Title = "Forms";
    Layout = "~/Views/Tests/_TestsLayout.cshtml";
}

<h2>Forms</h2>

<h3>DOM Manipulation (see AddContent.js)</h3>
<div>
    <div>b4c2</div>
    <div id="centerpoint2">Centerpoint2</div>
    <div>afterc2</div>
</div>

<h3>Forms with buttons</h3>
<div class="form-horizontal">
    <div id="mycontainer">
        <div id="centerpoint">Center Point</div>
        <div class="otherpoint">QWERTY</div>
    </div>
    <div id="outwin"></div>

    <input name="man-news">
    <input name="milkman">
    <input name="letterman2">
    <input name="man">

    <div class="form-group">
        <button class="btn btn-default" onclick="addContent()">
            <img src="~/Images/004-man.png" width="20" /> This is a button
        </button>
        <button type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-remove"></span>
        </button>
        <button>
            <span class="glyphicon glyphicon-plus"></span>
        </button>
        <button type="button" class="btn btn-danger">
            <span class="glyphicon glyphicon-remove"></span>
        </button>
    </div>
    <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        Enter a valid email address
    </div>
</div>
<h3>Form with Text</h3>
<form id="formABCD">
    ABCD
</form>
<h3>Form with button</h3>
<form id="justsubmit">
    <input type="submit" value="--submit--" />
</form>
<h3>Form with text and button</h3>
<form>
    <span>Text and...</span>
    <input type="submit" value="Buy Now" />
</form>

<h3>Form with text on left, button on right</h3>
<form id="formWithButtonsonRight" class="boxed">
    <div class="row myform">
        <div class="col-xs-6">
            <span>Text and...</span>
        </div>
        <div class="col-xs-4">
            <input type="submit" value="Buy Now" />
        </div>
        <div class="col-xs-2"></div>
        <div class="col-xs-6">
            <span>Text 2 and...</span>
        </div>
        <div class="col-xs-4">
            <input type="submit" value="Buy Now" onclick="func()" />
        </div>
        <div class="col-xs-2"></div>
    </div>
</form>

<div>
    <form action="" method="post">
        @Html.LabelFor(model => model.Index)
        @Html.DropDownListFor(model => model.Index, new SelectList(Model.Teams, "Value", "Text"), "Select a team")
        <input type="submit" value="Is a value selected?" />
        <p>@Model.Index</p>
        <div>
            @Html.ValidationMessageFor(model => model.Index, null, new { @class = "text-danger" })
        </div>
    </form>
</div>
<hr />


@section Scripts {
    @Scripts.Render("~/Scripts/AddContent.js")
    @Scripts.Render("~/bundles/jqueryval")

}

